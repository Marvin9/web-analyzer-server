{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
      "no-plusplus": "off",
      "no-param-reassign": "warn"
    },
    "overrides": [
      {
        "files": ["helpers/rules/list/*"],
        "rules": {
          "no-param-reassign": "off"
        }
      },
      {
        "files": ["tests/*"],
        "rules": {
          "no-unused-vars": "off"
        }
      }
    ]
}
